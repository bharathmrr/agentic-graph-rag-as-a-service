# Agentic Graph RAG as a Service - Environment Configuration
# Copy this file to .env and fill in your actual values

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-3.5-turbo
OPENAI_MAX_TOKENS=2000
OPENAI_TEMPERATURE=0.1

# Neo4j Database Configuration
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=your_neo4j_password_here
NEO4J_DATABASE=neo4j

# ChromaDB Configuration
CHROMADB_HOST=localhost
CHROMADB_PORT=8000
CHROMADB_PERSIST_DIRECTORY=./chroma_db

# Application Configuration
APP_HOST=0.0.0.0
APP_PORT=8000
APP_DEBUG=true
APP_RELOAD=true

# File Upload Configuration
UPLOAD_DIRECTORY=./uploads
MAX_FILE_SIZE=104857600  # 100MB in bytes
ALLOWED_FILE_TYPES=txt,pdf,doc,docx,md,json,csv

# Processing Configuration
MAX_CHUNK_SIZE=1000
CHUNK_OVERLAP=100
MAX_ENTITIES_PER_REQUEST=1000
MAX_SEARCH_RESULTS=50

# Embedding Configuration
EMBEDDING_MODEL=all-MiniLM-L6-v2
EMBEDDING_DIMENSION=384
SIMILARITY_THRESHOLD=0.7

# Entity Resolution Configuration
FUZZY_THRESHOLD=0.85
SEMANTIC_THRESHOLD=0.80
COMBINED_THRESHOLD=0.75
AUTO_MERGE_THRESHOLD=0.90

# Graph Configuration
GRAPH_LAYOUT_ALGORITHM=spring_layout
MAX_GRAPH_NODES=500
MAX_GRAPH_EDGES=1000

# Reasoning Configuration
MAX_CONTEXT_MESSAGES=6
RETRIEVAL_STRATEGY=adaptive
MAX_REASONING_STEPS=10

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=./logs/agentic_rag.log
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# Security Configuration (for production)
SECRET_KEY=your_secret_key_here
CORS_ORIGINS=http://localhost:3000,http://localhost:5173
ALLOWED_HOSTS=localhost,127.0.0.1

# Optional: Alternative LLM Configuration
# OLLAMA_BASE_URL=http://localhost:11434
# OLLAMA_MODEL=llama2
# USE_LOCAL_LLM=false

# Optional: Redis Configuration (for caching)
# REDIS_URL=redis://localhost:6379
# REDIS_PASSWORD=your_redis_password_here

# Optional: Monitoring and Analytics
# ENABLE_METRICS=true
# METRICS_PORT=9090
# ENABLE_TRACING=false

# Development Configuration
FRONTEND_URL=http://localhost:3000
API_BASE_URL=http://localhost:8000
ENABLE_DOCS=true
ENABLE_REDOC=true

# Production Configuration (uncomment for production)
# APP_DEBUG=false
# APP_RELOAD=false
# LOG_LEVEL=WARNING
# CORS_ORIGINS=https://yourdomain.com
# ALLOWED_HOSTS=yourdomain.com
# SECRET_KEY=your_production_secret_key_here
